<section>
  <%= render 'shared/user', user: @user %>
</section>
<section>
  <% @posts.each do |post| %>
    <%= render 'shared/post', post: post %>
    <div class="card mt-2">
      <div class="card-body">
        <%= render partial: 'shared/comment', collection: post.recent_comments %>
      </div>
    </div>
  <% end %>
</section>
<%# add new post %>
<%= link_to 'Create new post', new_user_post_path(@user), class: "btn btn-secondary stretched-link d-block mt-3 mx-auto", style: "width: 10em" %>