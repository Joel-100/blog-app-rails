<div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-4">
        <img src=<%= user.photo %> class="rounded-start w-100" alt="<%= user.name %> photo" style="height: 250px; object-fit: cover">
      </div>
      <div class="col-md-8">
        <div class="card-body d-flex flex-column">
          <h1 class="card-title">
            <%= link_to user.name, user %>
          </h1>
          <p class="card-text ms-auto"><small class="text-muted">Number of posts: <%= user.posts_counter %></small></p>
        </div>
      </div>
    </div>
  </div>